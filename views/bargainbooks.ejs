<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bargain Books</title>
  <style>
    body { font-family: Arial; background: #f4f4f4; padding: 40px; }
    table { width: 60%; margin: auto; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #eee; }
  </style>
</head>
<body>
  <h1>Bargain Books (Under £20)</h1>
  <% if (cheapBooks.length > 0) { %>
    <table>
      <tr><th>Book Name</th><th>Price (£)</th></tr>
      <% cheapBooks.forEach(function(book) { %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.price %></td>
        </tr>
      <% }); %>
    </table>
  <% } else { %>
    <p>No bargain books found!</p>
  <% } %>
  <p><a href="/">Back to home</a></p>
</body>
</html>
